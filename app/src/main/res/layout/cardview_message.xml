<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageProfileMessage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_person_grey"
        app:civ_border_color="@color/colorGrey"
        app:civ_border_width="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearLayoutMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_toEndOf="@id/circleImageProfileMessage"
        android:background="@drawable/linearlayout_backround">

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nuevo mensaje"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/colorDarkBlue"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:textSize="12sp"
            android:textColor="#797575"
            android:layout_marginStart="10dp"
            android:gravity="bottom"/>

        <ImageView
            android:id="@+id/imageViewCheck"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/check_grey"
            android:layout_gravity="bottom"/>

    </LinearLayout>



</RelativeLayout>